
<h2>Upcoming Events</h2>
  <ul>
      <% Event.upcoming.each do |date| %>
        <li>
          <%= date.description %>
        </li>  
      <% end %>
  </ul>

<h2>Past Events</h2>
  <ul>
      <% Event.previous.each do |date| %>
        <li>
          <%= date.description %>
        </li>  
      <% end %>
  </ul>
